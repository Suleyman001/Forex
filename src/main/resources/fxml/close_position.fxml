<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="lecture.forex.controller.PositionController"
      spacing="15" alignment="center" style="-fx-padding: 20; -fx-background-color: #f4f4f4;">
    <Label text="Close Position" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <Label text="Enter Position ID:" />
    <TextField fx:id="positionIdField" promptText="Position ID" prefWidth="200"/>
    <Button text="Close Position" onAction="#positionClosingAction" style="-fx-font-size: 14px; -fx-padding: 8px 16px;"/>
    <Label fx:id="resultLabel" style="-fx-font-size: 14px; -fx-text-fill: #333333;"/>
</VBox>